<project name="Projecto de exemplo para build no jenkins">
	
	<path id="tests.classpath" path=".">
		<fileset dir="lib/">
			<include name="*.jar" />
		</fileset>
		<pathelement path="target/classes/" />
	</path>
	
	<target name="compile">
		<mkdir dir="src/jenkins/"/>
		<mkdir dir="target/classes-test/"/>
		<javac destdir="target/classes/" srcdir="src/jenkins/" debug="true" encoding="UTF-8" />
		<javac destdir="test/jenkins/" srcdir="test/jenkins/" classpathref="tests.classpath" debug="true" encoding="UTF-8" />
	</target>
	
	<target name="test" depends="compile">
		<junit fork="yes" forkmode="once"  printsummary="true" showoutput="true" failureproperty="failed-test" haltonfailure="true" >
			<formatter type="plain" usefile="false" />
			<classpath location="test/jenkins/" />
			<classpath refid="tests.classpath" />
			<batchtest fork="yes" todir="${artifacts.dir}/reports">
				<fileset dir="test/jenkins/" >
					<include name="**/*Test.class" />
				</fileset>
			</batchtest>
		</junit>
	</target>
	<target name="jar" depends="test">
		<jar destfile="target/jenkins-exemplo.jar" basedir="test/jenkins/" />
	</target>
</project>
